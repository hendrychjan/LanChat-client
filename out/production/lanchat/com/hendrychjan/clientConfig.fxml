<AnchorPane prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #303039;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hendrychjan.ClientConfigController">
    <children>
        <GridPane prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #303039;">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label styleClass="lbl-text" stylesheets="@general.css" text="Nick" textFill="#1a81da" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
               <font>
                  <Font name="Segoe UI" size="15.0" />
               </font></Label>
                <TextField fx:id="txf_nick" stylesheets="@general.css" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="40.0" right="40.0" />
                    </GridPane.margin>
                </TextField>
            <Label styleClass="lbl-text" stylesheets="@general.css" text="Ip adresa" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
               <font>
                  <Font name="Segoe UI" size="13.0" />
               </font></Label>
            <TextField fx:id="txf_ip" stylesheets="@general.css" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets left="40.0" right="40.0" />
               </GridPane.margin>
            </TextField>
                <Button fx:id="btn_submit" mnemonicParsing="false" onAction="#onConfigSubmit" stylesheets="@general.css" text="Potvrdit" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
                <Label fx:id="lbl_error" prefHeight="15.0" styleClass="lbl-error" stylesheets="@general.css" textFill="#f24848" GridPane.halignment="CENTER" GridPane.rowIndex="6">
               <font>
                  <Font name="JetBrains Mono Light" size="13.0" />
               </font></Label>
            </children>
        </GridPane>
    </children>
</AnchorPane>
